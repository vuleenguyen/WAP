<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WebStore</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.mum.edu.controller.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>product</servlet-name>
		<servlet-class>com.mum.edu.controller.ProductController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/product.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>productDetail</servlet-name>
		<servlet-class>com.mum.edu.controller.ProductDetail</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>productDetail</servlet-name>
		<url-pattern>/productDetail.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>orderList</servlet-name>
		<servlet-class>com.mum.edu.controller.Orders</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>orderList</servlet-name>
		<url-pattern>/orderList.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>productManager</servlet-name>
		<servlet-class>com.mum.edu.controller.ProductManager</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>productManager</servlet-name>
		<url-pattern>/manager</url-pattern>
	</servlet-mapping>
	
	<session-config>
		<session-timeout>
			604800
		</session-timeout>
	</session-config>
</web-app>